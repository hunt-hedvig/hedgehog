{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "interface-name": false,
    "no-submodule-imports": false,
    "no-implicit-dependencies": false,
    "no-console": false,
    "variable-name": {
      "options": ["ban-keywords", "allow-pascal-case", "check-format", "allow-leading-underscore", "allow-trailing-underscore"]
    }
  },
  "linterOptions": {
    "exclude": ["./src/api/generated/graphql.tsx"]
  }
}
