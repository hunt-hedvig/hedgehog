{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["dom", "es6", "es7", "es2017.object", "es2021"],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true,
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "*": ["*", "node_modules/*", "src/*", "shared/*"]
    },
    "removeComments": true
  },
  "include": [
    "./shared/**/*.ts",
    "./shared/**/*.js",
    "./shared/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js"
  ],
  "exclude": ["node_modules", "./src/apollo/**/*"]
}
